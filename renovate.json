{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "prConcurrentLimit": 40,
  "tekton": {
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ],
    "includePaths": [
      ".tekton/**",
      "task/**",
      "stepactions/**",
      "pipelines/enterprise-contract*.yaml"
    ]
  },
  "packageRules": [
    {
      "groupName": "tekton-ci",
      "matchFileNames": [
        ".tekton/**"
      ]
    },
    {
      "matchPackageNames": [
        "quay.io/konflux-ci/appstudio-utils"
      ],
      "schedule": [
        "on sunday"
      ]
    },
    {
      "groupName": "build",
      "matchFileNames": [
        "task/apply-tags/**",
        "task/build-image-index/**",
        "task/build-image-manifest/**",
        "task/buildah-min/**",
        "task/buildah-oci-ta/**",
        "task/buildah-remote-oci-ta/**",
        "task/buildah-remote/**",
        "task/buildah/**",
        "task/generate-labels/**",
        "task/git-clone-oci-ta/**",
        "task/git-clone/**",
        "task/init/**",
        "task/pnc-prebuild-git-clone-oci-ta/**",
        "task/push-dockerfile-oci-ta/**",
        "task/push-dockerfile/**",
        "task/show-sbom/**",
        "task/slack-webhook-notification-oci-ta/**",
        "task/slack-webhook-notification/**",
        "task/source-build-oci-ta/**",
        "task/source-build/**",
        "task/summary/**",
        "task/update-infra-deployments/**"
      ]
    },
    {
      "groupName": "build-prefetch",
      "matchFileNames": [
        "task/prefetch-dependencies-oci-ta/**",
        "task/prefetch-dependencies/**"
      ]
    },
    {
      "groupName": "ec",
      "matchFileNames": [
        ".tekton/tasks/ec-checks.yaml",
        "pipelines/enterprise-contract.yaml",
        "task/tkn-bundle-oci-ta/**",
        "task/tkn-bundle/**"
      ]
    },
    {
      "groupName": "integration",
      "matchFileNames": [
        "external-task/clair-scan/**",
        "external-task/clamav-scan/**",
        "external-task/coverity-availability-check/**",
        "external-task/deprecated-image-check/**",
        "external-task/roxctl-scan/**",
        "external-task/sast-coverity-check-oci-ta/**",
        "external-task/sast-coverity-check/**",
        "external-task/sast-shell-check-oci-ta/**",
        "external-task/sast-shell-check/**",
        "external-task/sast-snyk-check-oci-ta/**",
        "external-task/sast-snyk-check/**",
        "external-task/sast-unicode-check-oci-ta/**",
        "external-task/sast-unicode-check/**",
        "stepactions/fips-operator-check-step-action/**",
        "task/fbc-fips-check-oci-ta/**",
        "task/fbc-fips-check-worker-oci-ta/**",
        "task/fbc-fips-check/**",
        "task/fbc-fips-prepare-oci-ta/**",
        "task/fbc-target-index-pruning-check/**",
        "task/fips-operator-bundle-check-oci-ta/**",
        "task/fips-operator-bundle-check/**",
        "task/github-sarif-upload/**",
        "task/run-opm-command-oci-ta/**",
        "task/sbom-json-check/**",
        "task/validate-fbc/**"
      ]
    },
    {
      "groupName": "preflight",
      "description": "contains the group of current active preflight tasks",
      "matchFileNames": [
        "task/ecosystem-cert-preflight-checks/**"
      ],
      "enabled": true
    },
    {
      "groupName": "preflight-deprecated",
      "description": "contains the group of preflight tasks that no longer work in the konflux ecosystem with the latest preflight container image",
      "matchFileNames": [
        "task/ecosystem-cert-preflight-checks/0.1/**"
      ],
      "enabled": false
    },
    {
      "groupName": "github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "schedule": [
        "on sunday"
      ],
      "automerge": true
    },
    {
      "groupName": "go-modules",
      "matchManagers": [
        "gomod"
      ],
      "schedule": [
        "on sunday"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "quay.io/konflux-ci/clamav-db"
      ],
      "enabled": false,
      "groupName": "ignore"
    },
    {
      "groupName": "build-vm-image",
      "matchFileNames": [
        "task/build-vm-image/**"
      ]
    },
    {
      "groupName": "eaas",
      "matchFileNames": [
        "stepactions/eaas-copy-secrets-to-ephemeral-cluster/**",
        "stepactions/eaas-create-ephemeral-cluster-hypershift-aws/**",
        "stepactions/eaas-get-ephemeral-cluster-credentials/**",
        "stepactions/eaas-get-latest-openshift-version-by-prefix/**",
        "stepactions/eaas-get-supported-ephemeral-cluster-versions/**",
        "task/eaas-provision-space/**"
      ]
    },
    {
      "groupName": "maven",
      "matchFileNames": [
        "task/build-maven-zip-oci-ta/**",
        "task/build-maven-zip/**"
      ]
    },
    {
      "groupName": "oci-copy",
      "matchFileNames": [
        "task/oci-copy-oci-ta/**",
        "task/oci-copy/**"
      ]
    },
    {
      "groupName": "modelcar-oci",
      "matchFileNames": [
        "task/modelcar-oci-ta/**"
      ]
    },
    {
      "groupName": "opm",
      "matchFileNames": [
        "task/operator-sdk-generate-bundle/**",
        "task/opm-get-bundle-version/**",
        "task/opm-render-bundles/**"
      ]
    },
    {
      "groupName": "konflux-test-tasks",
      "description": "Updated and verified in konflux-test-tasks so should be ignored here",
      "matchFileNames": [
        "task/clair-scan/**",
        "task/clamav-scan/**",
        "task/deprecated-image-check/**"
      ],
      "enabled": false
    },
    {
      "groupName": "konflux-sast-tasks",
      "description": "Updated and verified in konflux-sast-tasks so should be ignored here",
      "matchFileNames": [
        "task/coverity-availability-check/**",
        "task/sast-coverity-check-oci-ta/**",
        "task/sast-coverity-check/**",
        "task/sast-shell-check-oci-ta/**",
        "task/sast-shell-check/**",
        "task/sast-snyk-check-oci-ta/**",
        "task/sast-snyk-check/**",
        "task/sast-unicode-check-oci-ta/**",
        "task/sast-unicode-check/**"
      ],
      "enabled": false
    },
    {
      "groupName": "buildpack",
      "matchFileNames": [
        "task/build-paketo-builder-oci-ta/**"
      ]
    },
    {
      "groupName": "sealights",
      "matchFileNames": [
        "task/sealights-go-oci-ta/**",
        "task/sealights-nodejs-oci-ta/**",
        "task/sealights-python-oci-ta/**"
      ]
    },
    {
      "groupName": "vanguard",
      "matchFileNames": [
        "external-task/rpms-signature-scan/**",
        "pipelines/tekton-bundle-builder-oci-ta/**",
        "pipelines/tekton-bundle-builder/**",
        "task/build-helm-chart-oci-ta/**",
        "task/build-helm-chart/**"
      ]
    },
    {
      "groupName": "oci-run-script",
      "matchFileNames": [
        "task/run-script-oci-ta/**"
      ]
    },
    {
      "groupName": "verify-source",
      "matchFileNames": [
        "task/verify-source/**"
      ]
    },
    {
      "groupName": "mobster",
      "matchFileNames": [
        "task/**"
      ],
      "matchManagers": [
        "regex"
      ],
      "matchPackageNames": [
        "quay.io/konflux-ci/mobster"
      ]
    },
    {
      "groupName": "ko-builder",
      "matchFileNames": [
        "task/ko-oci-ta/**"
      ]
    },
    {
      "groupName": "package-operator",
      "matchFileNames": [
        "task/package-operator-package-oci-ta/**",
        "task/package-operator-package/**"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^task/[\\w-]+/[0-9.]+/[\\w-]+\\.yaml$"
      ],
      "matchStrings": [
        "value: (?<depName>quay\\.io/konflux-ci/buildah[^:]*):(?<currentValue>[^@]*)@(?<currentDigest>sha256:[a-f0-9]{64})"
      ],
      "autoReplaceStringTemplate": "value: {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^external-task/.*/.*/.*\\.yaml$"
      ],
      "matchStrings": [
        "task_bundle: (?<depName>quay\\.io/konflux-ci/(?:konflux-vanguard|tekton-catalog)/[^:]+):(?<currentValue>[^@]*)@(?<currentDigest>sha256:[a-f0-9]{64})"
      ],
      "autoReplaceStringTemplate": "task_bundle: {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "{{currentValue}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        ".github/workflows/run-task-tests.yaml"
      ],
      "matchStrings": [
        "ref:\\s+(?<currentDigest>[a-f0-9]{40})"
      ],
      "currentValueTemplate": "main",
      "depNameTemplate": "konflux-ci",
      "packageNameTemplate": "https://github.com/konflux-ci/konflux-ci",
      "datasourceTemplate": "git-refs"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^task/.*/recipe\\.yaml$",
        "^task/.+/patch\\.yaml$"
      ],
      "matchStrings": [
        "(?:image: |tooling-image=)(?:['\"])?(?<depName>[0-9a-z./-]+)(?::(?<currentValue>[0-9a-z.-]+))?@(?<currentDigest>sha256:[a-f0-9]{64})(?:['\"])?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^task/build-vm-image/.*/build-vm-image.yaml"
      ],
      "matchStrings": [
        "BUILDAH_IMAGE\\s*\\n\\s*value:\\s*['\"]?(?<depName>[^'\":]+):(?<currentValue>[^'\":\\s]+)['\"]?"
      ],
      "depNameTemplate": "registry.access.redhat.com/ubi9/buildah",
      "datasourceTemplate": "docker",
      "versioningTemplate": "redhat"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^task/[\\w-]+/[0-9.]+/[\\w-]+\\.yaml$"
      ],
      "matchStrings": [
        "image: (?<depName>quay\\.io/konflux-ci/mobster[^:]*):(?<currentValue>[^@]*)@(?<currentDigest>sha256:[a-f0-9]{64})"
      ],
      "autoReplaceStringTemplate": "image: {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "redhat"
    }
  ],
  "ignorePaths": [
    ".github/actions/install-tkn/action.yaml",
    ".github/resources/workspace-template.yaml",
    ".github/scripts/test_tekton_tasks.sh",
    ".github/workflows/check-kustomize-build.yaml",
    ".github/workflows/check-ta.yaml",
    ".github/workflows/check-task-migration.yaml",
    ".github/workflows/checkton.yaml",
    ".github/workflows/run-task-tests.yaml",
    ".github/workflows/task-lint.yaml",
    ".github/workflows/update-shared-ci.yaml",
    ".github/workflows/versioning.yaml"
  ]
}
